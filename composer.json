{
    "name": "lion/dependency-injection",
    "description": "Container for dependency injection with DI-PHP",
    "type": "library",
    "license": "MIT",
    "homepage": "https://dev.lion-packages.com",
    "keywords": [
        "lion",
        "dependency-injection",
        "lion-dependency-injection"
    ],
    "support": {
        "issues": "https://github.com/lion-packages/dependency-injection/issues",
        "source": "https://github.com/lion-packages/dependency-injection"
    },
    "autoload": {
        "psr-4": {
            "Lion\\Dependency\\Injection\\": "src/DependencyInjection/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.4",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "lion/test": "^2.1 || ^3.0",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.11 || ^4.0",
        "phpunit/phpunit": "^12.0",
        "overtrue/phplint": "^9.5",
        "infection/infection": "^0.29.14"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": false
        }
    }
}
